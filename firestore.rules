rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla para permitir a los usuarios acceder solo a sus propias conversaciones
    match /conversations/{userId} {
      // Permitir lectura/escritura solo si el ID del usuario coincide con el ID autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir acceso a los chats dentro de las conversaciones del usuario
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Regla general para otros documentos (puedes ajustar seg√∫n necesites)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 6, 21);
    }
  }
}