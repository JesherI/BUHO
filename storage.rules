rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir a los usuarios acceder a sus propios archivos
    match /users/{userId}/{allPaths=**} {
      // Permitir lectura/escritura solo si el ID del usuario coincide con el ID autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regla para archivos públicos (si es necesario)
    match /public/{allPaths=**} {
      allow read: if true;  // Cualquiera puede leer archivos públicos
      allow write: if request.auth != null;  // Solo usuarios autenticados pueden escribir
    }
    
    // Regla predeterminada para otros archivos
    match /{allPaths=**} {
      allow read, write: if false;  // Denegar acceso por defecto
    }
  }
}
